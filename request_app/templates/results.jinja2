{% extends "index.jinja2" %}
{% block content %}
<div id="results_div" class="row-fluid">
	<div>
		<form method="POST">
			<input class="" id="search_input" type="text" name="search_text" placeholder="search for a song or artist...">
	 		<button class="btn" type="submit">Search</button>
 		</form>
	</div>

	<div id="search_tab_div" class="row-fluid " style="display: block;">			
		<div class="row-fluid ">
			<h3>Search Results  <small id="number_found"></small></h3>
			<div id="results_list">
				<p>{{count}} results found...</p>
				<table id="results_table" class="table well">
					<thead>
						<td>Title</td>
						<td>Artist</td>
						<td></td>
					</thead>
					{% for song in songs %}
					<tbody>
						<td>{{ song.title }}</td>
						<td>{{ song.artist }}</td>
						<td><a href='/songadd/{{queueid}}/{{song.id}}' class="btn btn-mini btn-primary" type="button">Add</a></td>
					</tbody>
					{% endfor %}
				</table>
			</div>
		</div>
	</div>

</div>
{% endblock %}