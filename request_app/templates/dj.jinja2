{% block content %}
<div id="dj_view" class="row-fluid">
	<div class="page-header">
			<h1>{{dj.name}}</h1> &nbsp <img src="..." class="img-rounded">
	</div>

	<div class="">
		<form>
			<fieldset>
				<label>Bio</label>
				<input type="text" placeholder='{{dj.bio}}'>
